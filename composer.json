{
    "name": "yangtze64/thrift-rpc-client",
    "description": "Thrift RPC for Hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "Thrift"
    ],
    "support": {
        "source":"https://github.com/yangtze64/thrift-rpc-client"
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "apache/thrift": "^0.13.0",
        "hyperf/contract": "~2.0.0",
        "hyperf/pool": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "hyperf/command": "~2.0.0",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "hyperf/di": "~2.0.0",
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0.0",
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "minimum-stability": "0.0.1",
    "autoload": {
        "psr-4": {
            "Hyperf\\ThriftRpc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\ThriftRpc\\": "tests/"
        }
    },
    "prefer-stable": true,

    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\ThriftRpc\\ConfigProvider"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always"
    }
}
